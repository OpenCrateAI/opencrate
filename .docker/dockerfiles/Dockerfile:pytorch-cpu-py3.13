FROM opencrate-base:latest

RUN mkdir /root/.hooks/
COPY .docker/hooks/ /root/.hooks/

RUN add-apt-repository ppa:deadsnakes/ppa -y &&\
    apt update -y &&\
    apt install -y --no-install-recommends python3.13 python3.13-dev &&\
    curl -sS https://bootstrap.pypa.io/get-pip.py | python3.13 &&\
    python3.13 -m pip install --upgrade pip --root-user-action=ignore --no-cache-dir
RUN python3.13 -m pip install --no-cache-dir --upgrade --root-user-action=ignore ipython jupyter &&\
    python3.13 -m pip cache purge

RUN mkdir /home/opencrate/
WORKDIR /home/opencrate/
COPY src/ /home/opencrate/src
COPY pyproject.toml /home/opencrate/
COPY setup.cfg /home/opencrate/
COPY setup.py /home/opencrate/
RUN python3.13 -m pip install -e . --no-cache-dir --root-user-action=ignore

WORKDIR /home/workspace/
RUN git config --global --add safe.directory '*' && git config --global init.defaultBranch main
